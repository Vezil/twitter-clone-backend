{
    "name": "graphql-auth",
    "license": "MIT",
    "scripts": {
        "dev": "ts-node-dev --no-notify --respawn --watch --transpile-only src/server",
        "tsc": "tsc",
        "build": "npm install && npm run db-reset && npm start",
        "postinstall": "npm run tsc && npm run start",
        "start": "node src/server",
        "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
        "generate:prisma": "prisma generate",
        "generate:nexus": "ts-node --transpile-only src/schema",
        "db-push": "./node_modules/.bin/prisma db push",
        "db-migrate": "./node_modules/.bin/prisma migrate dev",
        "db-deploy": "./node_modules/.bin/prisma migrate deploy",
        "db-seed": "ts-node prisma/seed.ts",
        "db-setup": "npm run db-push && npm run db-migrate",
        "db-reset": "./node_modules/.bin/prisma migrate reset --force"
    },
    "dependencies": {
        "@nexus/schema": "^0.20.1",
        "@prisma/client": "3.5.0",
        "apollo-server": "3.5.0",
        "bcryptjs": "2.4.3",
        "graphql": "15.7.2",
        "graphql-middleware": "6.1.12",
        "graphql-scalars": "1.13.6",
        "graphql-shield": "7.5.0",
        "jsonwebtoken": "8.5.1",
        "nexus": "1.1.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.5"
    },
    "devDependencies": {
        "@faker-js/faker": "^6.0.0-alpha.5",
        "@types/bcryptjs": "2.4.2",
        "@types/jsonwebtoken": "8.5.6",
        "@types/node": "16.11.11",
        "prettier": "2.5.0",
        "prisma": "3.5.0",
        "ts-node": "^10.4.0",
        "ts-node-dev": "1.1.8",
        "typescript": "^4.5.5"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    }
}